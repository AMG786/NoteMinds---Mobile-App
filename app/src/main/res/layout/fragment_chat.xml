<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Chat Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:padding="16dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back button area (you can add back button here if needed) -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/user_avatar_bg"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChatWith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="#E8E8E8"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Messages Area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Message Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F1F3F4">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type a message..."
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColorHint="#9E9E9E"
                android:maxLines="4"
                android:inputType="textMultiLine|textCapSentences"/>

        </androidx.cardview.widget.CardView>

<ImageButton
    android:id="@+id/btn_send"
    android:layout_width="48dp"
    android:layout_height="48dp"
    app:cardCornerRadius="24dp"
    android:src="@drawable/ic_send"
    android:background="@android:color/primary_text_dark"/>




    </LinearLayout>

</LinearLayout>